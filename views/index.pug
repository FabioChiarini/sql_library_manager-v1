extends layout.pug

block content

    body
        h1 Books
        p
            a(class='button' href='/new') Create New Book

        table
            thead
                tr
                    td Title
                    td Author
                    td Genre
                    td Year


            tbody
                each book in books
                    tr
                        td
                            a(href=`/books/${book.id}/edit`)= book.title
                        td= book.author
                        td= book.genre
                        td= book.year
        
        br
        br
        
        div.pagination
                    a(class='button' href='/books/1') 1
                    a(class='button' href='/books/2') 2
                    a(class='button' href='/books/3') 3
