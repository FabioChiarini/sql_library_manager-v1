extends layout.pug

block content

    body
        h1 Books
        p
            a(class='button' href='books/new') Create New Book

        table
            thead
                tr
                    td Title
                    td Author
                    td Genre
                    td Year


            tbody
                each book in books
                    tr
                        td
                            a(href=`/books/${book.id}`)= book.title
                        td= book.author
                        td= book.genre
                        td= book.year
