extends layout.pug

block content

    body
        h1 Search Results

        br
        table
            thead
                tr
                    td Title
                    td Author
                    td Genre
                    td Year


            tbody
                each book in books
                    tr
                        td
                            a(href=`/books/${book.id}/edit`)= book.title
                        td= book.author
                        td= book.genre
                        td= book.year
        br
        div.pagination
            - var i = 1;
            while (i < (pages+1))
                a(class='button' href=`/books/search/${keyword}/${i}`)= i
                - i++
        br
        p
            a(class='button' href='/books') HOME
